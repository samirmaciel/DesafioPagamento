<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/greenbold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnKeyboard1"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/sizeOfKeyboardNumber"
                    android:scaleType="fitCenter"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_1"/>

                <TextView
                    android:layout_marginStart="9dp"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayhint"
                    android:visibility="invisible"
                    android:text="ABC"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginHorizontal="@dimen/marginHorizontalOfKeyboardNumber"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnKeyboard2"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/sizeOfKeyboardNumber"
                    android:scaleType="fitCenter"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_2"/>

                <TextView
                    android:layout_marginStart="9dp"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayhint"
                    android:text="ABC"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnKeyboard3"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/sizeOfKeyboardNumber"
                    android:scaleType="fitCenter"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_3"/>

                <TextView
                    android:layout_marginStart="9dp"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayhint"
                    android:text="DEF"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginVertical="@dimen/marginVerticalOfKeyboardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnKeyboard4"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/sizeOfKeyboardNumber"
                    android:scaleType="fitCenter"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_4"/>

                <TextView
                    android:layout_marginStart="9dp"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayhint"
                    android:text="GHI"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/marginHorizontalOfKeyboardNumber"
                android:gravity="bottom"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnKeyboard5"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/sizeOfKeyboardNumber"
                    android:scaleType="fitCenter"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_5"/>

                <TextView
                    android:layout_marginStart="9dp"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayhint"
                    android:text="JKL"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnKeyboard6"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/sizeOfKeyboardNumber"
                    android:scaleType="fitCenter"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_6"/>

                <TextView
                    android:layout_marginStart="9dp"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayhint"
                    android:text="MNO"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnKeyboard7"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/sizeOfKeyboardNumber"
                    android:scaleType="fitCenter"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_7"/>

                <TextView
                    android:layout_marginStart="9dp"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayhint"
                    android:text="PQRS"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginHorizontal="@dimen/marginHorizontalOfKeyboardNumber"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnKeyboard8"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/sizeOfKeyboardNumber"
                    android:scaleType="fitCenter"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_8"/>

                <TextView
                    android:layout_marginStart="9dp"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayhint"
                    android:text="TUV"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnKeyboard9"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/sizeOfKeyboardNumber"
                    android:scaleType="fitCenter"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_9"/>
                <TextView
                    android:layout_marginStart="9dp"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayhint"
                    android:text="WXYZ"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBackSpace"
                android:layout_width="40dp"
                android:scaleType="fitCenter"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"/>

            <LinearLayout
                android:layout_marginVertical="@dimen/marginVerticalOfKeyboardNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginHorizontal="60dp"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnKeyboard0"
                    android:layout_width="40dp"
                    android:clickable="true"
                    android:layout_height="@dimen/sizeOfKeyboardNumber"
                    android:scaleType="fitCenter"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_0"/>
                <TextView
                    android:layout_marginStart="9dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayhint"
                    android:text="+"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnSend"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_ok_button"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>